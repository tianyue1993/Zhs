<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_pswd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.zhs.zhs.activity.AddNewPswdActivity">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@mipmap/login_input_bac">


        <TextView
            android:id="@+id/forget_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="　新密码："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/forget_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/forget_type"
            android:background="@null"
            android:gravity="left|center"
            android:hint="请输入6-12位数字或字母"
            android:inputType="textPassword"
            android:singleLine="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@mipmap/login_input_bac">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="确认密码："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/forget_confirm_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/text1"
            android:background="@null"
            android:gravity="left|center"
            android:hint="请输入6-12位数字或字母"
            android:inputType="textPassword"
            android:singleLine="true" />

    </RelativeLayout>


    <CheckBox
        android:id="@+id/forget_show_pwd_check"
        android:layout_width="20dp"
        android:layout_height="14dp"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_show_pwd"
        android:button="@null"
        android:checked="false"
        android:padding="10dp" />

    <Button
        android:id="@+id/forget_commit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/bg_base_unchecked"
        android:clickable="false"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="22dp" />

</RelativeLayout>
