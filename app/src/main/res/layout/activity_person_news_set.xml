<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_person_news_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">


    <RelativeLayout
        android:id="@+id/personalavator_rl"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/mine_item_bg"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/setting_personal_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginhuge"
            android:src="@mipmap/ic_into" />

        <com.zhs.zhs.views.CircleImageView
            android:id="@+id/personalavator_ciriv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_default_avator" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_username_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personalavator_rl"
        android:layout_marginTop="5dp"
        android:background="@drawable/mine_item_bg"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/setting_personal_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginhuge"
            android:src="@mipmap/ic_into"
            android:visibility="visible" />


        <TextView
            android:id="@+id/personal_username_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_phone_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_username_rl"
        android:layout_marginTop="5dp"
        android:background="@drawable/mine_item_bg"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/setting_personal_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:text="手机号"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginhuge"
            android:src="@mipmap/ic_into"
            android:visibility="visible" />


        <TextView
            android:id="@+id/personal_phone_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>


</RelativeLayout>
