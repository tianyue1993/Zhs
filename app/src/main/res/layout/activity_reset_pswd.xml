<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_pswd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhs.zhs.activity.ResetPswdActivity">


    <LinearLayout
        android:id="@+id/old_psd_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="旧密码:"
            android:textColor="@color/base_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:hint="请输入6-12位数字或字母"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="12"
            android:textColor="#5a5a5a"
            android:textColorHint="#c7b88f"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/pic1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="新密码:"
            android:textColor="@color/base_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:hint="请输入6-12位数字或字母"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColor="#5a5a5a"
            android:textColorHint="#c7b88f"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/renew_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="确认密码:"
            android:textColor="@color/base_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/renew_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:hint="请输入6-12位数字或字母"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="12"
            android:textColor="#5a5a5a"
            android:textColorHint="#c7b88f"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_color" />

    <CheckBox
        android:id="@+id/forget_show_pwd_check"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_show_pwd"
        android:button="@null"
        android:checked="false"
        android:padding="10dp" />


    <Button
        android:id="@+id/btn_next"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_base"
        android:text="完成"
        android:textColor="#f4f3f3" />

</LinearLayout>
