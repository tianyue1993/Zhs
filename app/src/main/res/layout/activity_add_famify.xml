<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_famify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.zhs.zhs.activity.AddFamify">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@mipmap/login_input_bac">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="姓    名："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left|center"
            android:hint="输入家人姓名"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edit_cursor" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_below="@id/rl_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@mipmap/login_input_bac">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="手机号："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left|center"
            android:hint="输入手机号"
            android:singleLine="true"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/edit_cursor" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@mipmap/login_input_bac">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="验证码："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left|center"
            android:hint="输入验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <TextView
            android:id="@+id/get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lost_code"
            android:text="获取验证码"
            android:textColor="#F7B23f" />
    </RelativeLayout>

    <Button
        android:id="@+id/sure"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_code"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_base"
        android:text="确认添加"
        android:textColor="@color/white" />
</RelativeLayout>
