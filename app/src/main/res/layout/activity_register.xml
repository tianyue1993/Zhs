<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_feedback"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:padding="12dp"
        android:textCursorDrawable="@drawable/cursor_drawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/captcha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_feedback"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="8"
            android:padding="12dp"
            android:textCursorDrawable="@drawable/cursor_drawable" />

        <Button
            android:id="@+id/captcha_send"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_base"
            android:text="获取验证码"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/choose_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_feedback">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="所在地区："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/tv_address"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="请选择" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_into" />

    </RelativeLayout>

    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_feedback"
        android:hint="密码由8~10个字符组成"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textCursorDrawable="@drawable/cursor_drawable" />

    <EditText
        android:id="@+id/pwd_comfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_feedback"
        android:hint="请再输入一次密码"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textCursorDrawable="@drawable/cursor_drawable" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/login_showh_pwd"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_show_pwd"
            android:button="@null"
            android:padding="20dp" />
    </RelativeLayout>


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_base"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textCursorDrawable="@drawable/cursor_drawable" />

</LinearLayout>
